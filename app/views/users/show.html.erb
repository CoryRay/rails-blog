<% provide(:title, @user.name) %>
<aside class="five columns">
    <section class='user-info'>
        <%= gravatar_for @user %>
        <h1><%= @user.name %></h1>
    </section>
</aside>
<section class="seven columns">
    <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
        <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
    <% end %>
</section>
